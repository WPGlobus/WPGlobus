{
  "name": "wpglobus",
  "version": "2.2.22",
  "description": "WPGlobus is a plugin for making bilingual / multilingual WordPress blogs and sites.",
  "title": "WPGlobus",
  "main": "Gulpfile.js",
  "scripts": {
    "watch": "gulp watch",
    "dist": "composer update -o && gulp dist",
    "// Global npm": "",
    "g:list": "npm list -g --dept=0 && npm -g outdated",
    "g:update": "npm update -g && npm run g:list",
    "// Local npm": "",
    "l:list": "npm list --dept=0 && npm outdated",
    "l:install": "npm install && npm run l:list",
    "l:update": "npm update && npm run l:list",
    "l:reinstall": "del package-lock.json && del /s /q node_modules && npm run l:install",
    "// 1. Get updates!": "npm run git:fetch:all && npm run git:pull:dev",
    "git:fetch:all": "git fetch --all",
    "git:pull:dev": "git checkout develop && git pull",
    "// 2. MANUAL WORK:": "",
    "// 2.1 UPDATE version": "",
    "// 2.2 UPDATE readme.txt": "echo readme.txt CHANGELOG.md",
    "// 3. Build": "",
    "build": "npm run dist",
    "// 3.1 If translations changed": "",
    "tx:push:pot": "tx push -s",
    "tx:push:ru": "tx push -t -f -l ru_RU",
    "tx:pull:all": "tx pull -a -f --mode=translator",
    "pomo": "gulp pomo",
    "// 3.2 If translations changed - BUILD AGAIN!": "",
    "build:again": "npm run dist",
    "// 4. Commit and tag AND PUSH TO develop!": "npm run git:commit && npm run git:tag && npm run git:push:develop",
    "git:commit": "git add . && git commit -m \"%npm_package_version%\"",
    "git:tag": "git tag %npm_package_version%",
    "git:push:develop": "git push && git push --tags && npm run git:fetch:all",
    "// 5. To master": "",
    "git:merge": "git checkout master && git merge develop",
    "git:push:master": "git push",
    "// 6. To WordPress": "",
    "svn:up": "cd wpsvn\\wpglobus && svn up",
    "svn:sync": "svn_sync.cmd",
    "svn:add": "cd wpsvn\\wpglobus && svn add --force trunk && svn status",
    "// 6.1 IF DELETED FILES, svn delete THEM MANUALLY!": "",
    "svn:commit": "cd wpsvn\\wpglobus && svn ci -m \"%npm_package_title% %npm_package_version%\" --username tivnet",
    "svn:tag": "cd wpsvn\\wpglobus && svn cp trunk tags/%npm_package_version% && svn stat",
    "svn:tag:commit": "cd wpsvn\\wpglobus && svn ci -m \"%npm_package_title% tag %npm_package_version%\" --username tivnet",
    "// 7. Back to develop branch": "",
    "git:checkout:dev": "git checkout develop"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/WPGlobus/wpglobus.git"
  },
  "author": "The WPGlobus Team <support@wpglobus.com>",
  "license": "GPL-3.0",
  "jshintConfig": {
    "node": true
  },
  "bugs": {
    "url": "https://github.com/WPGlobus/wpglobus/issues"
  },
  "homepage": "https://wpglobus.com",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-append-prepend": "^1.0.8",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-babel": "^8.0.0",
    "gulp-downloader": "^1.0.4",
    "gulp-print": "^5.0.2",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-tap": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-vinyl-zip": "^2.1.2",
    "gulp-wp-pot": "^2.3.5",
    "lodash": ">=4.17.13",
    "lodash.defaultsdeep": ">=4.6.1",
    "lodash.merge": ">=4.6.2",
    "lodash.template": ">=4.5.0",
    "plugin-error": "^1.0.1",
    "pump": "^3.0.0",
    "through2": "^3.0.1"
  },
  "dependencies": {},
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "maintained node versions",
    "not dead"
  ]
}
